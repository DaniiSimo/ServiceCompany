        "/api/get/area": {
            "get": {
                "tags": [
                    "Organization"
                ],
                "summary": "Получение организаций по области",
                "description": "Поиск организаций, которые находятся в заданном радиусе/прямоугольной области относительно указанной точки на карте.",
                "operationId": "ecd3de1ce712e13f19cfa503d44d8b8d",
                "parameters": [
                    {
                        "name": "polygon",
                        "in": "query",
                        "description": "Координаты области (первая и последняя пара координат должны совпадать)",
                        "required": false,
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "pattern": "^-?\\d{1,3}\\.\\d{2}\\s+-?\\d{1,2}\\.\\d{2}$",
                                "example": "130.15 34.10"
                            },
                            "minItems": 4
                        },
                        "example": [
                            "130.15 34.10",
                            "130.17 34.10",
                            "130.17 34.11",
                            "130.15 34.11",
                            "130.15 34.10"
                        ]
                    },
                    {
                        "name": "lat",
                        "in": "query",
                        "description": "Широта координаты, относительно которой будет производиться поиск по радиусу",
                        "required": false,
                        "schema": {
                            "type": "number",
                            "format": "double",
                            "maximum": 90,
                            "minimum": -90,
                            "example": "34.10"
                        }
                    },
                    {
                        "name": "lon",
                        "in": "query",
                        "description": "Долгота координаты, относительно которой будет производиться поиск по радиусу",
                        "required": false,
                        "schema": {
                            "type": "number",
                            "format": "double",
                            "maximum": 180,
                            "minimum": -180,
                            "example": "130.15"
                        }
                    },
                    {
                        "name": "radius",
                        "in": "query",
                        "description": "Значение в метрах",
                        "required": false,
                        "schema": {
                            "type": "number",
                            "minimum": 0,
                            "example": "100"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Organization"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Ошибка аутентификации",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Unauthenticated."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Ресурс не найден",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Organization not found"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Ошибка валидации",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "integer",
                                            "example": 422
                                        },
                                        "description": {
                                            "type": "string",
                                            "example": "Ошибка валидации"
                                        },
                                        "errors": {
