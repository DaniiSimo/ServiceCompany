    "components": {
        "schemas": {
            "Activity": {
                "required": [
                    "name",
                    "path"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "quo dolor"
                    },
                    "path": {
                        "description": "Путь по которому происходит поиск активности строится через trim(string: Str::slug(title: Str::ascii(value: $value),separator: '_'))",
                        "type": "string",
                        "example": "quo_dolor"
                    },
                    "level": {
                        "description": "Поле выражения, которое описывает глубину деятельности",
                        "type": "smallint",
                        "maximum": 3,
                        "minimum": 1,
                        "readOnly": true,
                        "example": "1"
                    }
                },
                "type": "object"
            },
            "Building": {
                "required": [
                    "address",
                    "geom"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "address": {
                        "type": "string",
                        "example": "ПАО ГаражХозТелеком"
                    },
                    "geom": {
                        "description": "Служебное поле геометрии Point(SRID=4326). В ответах не возвращаетсяЗаполняется на сервере из lon/lat, например: DB::raw(\"ST_SetSRID(ST_MakePoint(:lon,:lat), 4326)\").",
                        "type": "string",
                        "writeOnly": true,
                        "example": "0101000020E61000008D5E0D501A4847C026FE28EACC7655C0"
                    },
                    "lon": {
                        "type": "number",
                        "format": "double",
                        "maximum": 180,
                        "minimum": -180,
                        "example": 130.158708
                    },
                    "lat": {
                        "type": "number",
                        "format": "double",
                        "maximum": 90,
                        "minimum": -90,
                        "example": 34.104894
                    }
                },
                "type": "object"
            },
            "Organization": {
                "required": [
                    "name",
                    "building_id"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "ПАО ГаражХозТелеком"
                    },
                    "building": {
                        "$ref": "#/components/schemas/Building"
                    },
                    "phones": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Phone"
                        }
                    },
                    "activites": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Activity"
                        }
                    }
                },
                "type": "object"
            },
            "Phone": {
                "required": [
                    "phone",
                    "organization_id"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "phone": {
                        "description": "Формат: X-XXX-XXX(-XX-XX). Уникален внутри организации.",
                        "type": "string",
                        "maxLength": 15,
                        "minLength": 9,
                        "pattern": "^[1-9]-[0-9]{3}-[0-9]{3}(-[0-9]{2}-[0-9]{2})?$",
                        "example": "8-923-666-13-13"
                    }
                },
                "type": "object"
            },
